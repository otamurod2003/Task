@model IQueryable<Subject>
@{
    ViewBag.Title = "All subjects";
}
<div class="row">
    <div>
        <a asp-action="create" asp-controller="subjects" class="btn btn-primary"> + Add new subject</a>
    </div>
    <h2 class="text-center">All subjects</h2>
    <div>

    </div>
    @if (Model.Any())
    {
        
            @foreach (var subject in Model)
            {
                <ul>
                    <li>
                       @subject.Name
                        <a asp-action="update" asp-controller="subjects" asp-route-id="@subject.Id" class="link-primary">Update</a>   <a asp-action="delete" asp-controller="subjects" asp-route-id="@subject.Id" class="link-danger">Delete</a>
                    </li>
                </ul>
            }
      
    }
    else
    {
        <div class="text-danger">
            <h3 class="text-center">No subject yet, please add new subject</h3>
        </div>
    }
</div>